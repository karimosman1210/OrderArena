<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardUseCompatPadding="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="8dp">

        <com.facebook.shimmer.ShimmerFrameLayout
            android:id="@+id/restNameShimmer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/orderRestaurantName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/title_font"
                android:textSize="@dimen/med_size" />

            <View
                android:id="@+id/restNamePlaceHolder"
                android:layout_width="match_parent"
                android:layout_height="18dp"
                android:background="#e0e0e0" />

        </com.facebook.shimmer.ShimmerFrameLayout>

        <com.facebook.shimmer.ShimmerFrameLayout
            android:id="@+id/addressShimmer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/orderAddressText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/varela_round" />

            <View
                android:id="@+id/addressPlaceHolder"
                android:layout_width="match_parent"
                android:layout_height="18dp"
                android:background="#e0e0e0" />
        </com.facebook.shimmer.ShimmerFrameLayout>

        <TextView
            android:id="@+id/orderDateTimeText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/varela_round"
            android:text="DateTime :" />

        <TextView
            android:id="@+id/orderStatusText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/varela_round"
            android:text="Status : " />


        <Button
            android:id="@+id/viewDetailsBtn"
            android:layout_width="wrap_content"
            android:layout_height="34dp"
            android:layout_gravity="end"
            android:background="@drawable/splash_btn_bg"
            android:fontFamily="@font/varela_round"
            android:padding="8dp"
            android:text="@string/view_details"
            android:textSize="@dimen/extra_small_size" />

    </LinearLayout>

</android.support.v7.widget.CardView>